{
	"arrowParens": "avoid",
	"bracketSameLine": true,
	"bracketSpacing": true,
	"embeddedLanguageFormatting": "auto",
	"endOfLine": "lf",
	"htmlWhitespaceSensitivity": "css",
	"insertPragma": false,
	"jsxSingleQuote": false,
	"printWidth": 80,
	"proseWrap": "preserve",
	"quoteProps": "as-needed",
	"requirePragma": false,
	"semi": true,
	"singleAttributePerLine": false,
	"singleQuote": true,
	"trailingComma": "es5",
	"useTabs": false,
	"tabWidth": 2,
	"vueIndentScriptAndStyle": false,
	"overrides": [
		{
			"files": "*.hbs",
			"options": {
				"parser": "glimmer"
			}
		}
	]
}
